<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C-digosDiagrumius.Alteracao"
             BackgroundColor="White">
    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Frame BackgroundColor="LightCoral"
               CornerRadius="20"
               Padding="30"
               HorizontalOptions="Center"
               VerticalOptions="Center">
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                <Image Source="warning_icon.png" HeightRequest="50" WidthRequest="50" />
                <Label Text="Cliente solicitou uma alteração do produto"
                       FontSize="16"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="Black"
                       HorizontalTextAlignment="Center" />
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>
